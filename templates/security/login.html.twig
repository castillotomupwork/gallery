{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="container">
    <form action="{{ path('login') }}" method="POST">
        <fieldset>
            {% include 'inc/flash_messages.html.twig' %}
            
            <div class="form-group row">
                <div class="col-sm-3 col-sm-offset-4">
                    <input type="text" class="form-control" name="_username" value="{{ lastUsername }}" placeholder="Username" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3 col-sm-offset-4">
                    <input type="password" class="form-control" name="_password"placeholder="Password" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3 col-sm-offset-4 text-center">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>
{% endblock %}